<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.tourplanner.controllers.ListController"
            prefHeight="400.0" prefWidth="600.0">

    <ToolBar AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" prefHeight="40.0" prefWidth="318.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
        <TextField fx:id="searchfield" maxWidth="200" ></TextField>
        <Pane HBox.hgrow="ALWAYS" />
        <ToggleButton fx:id="FavoriteFilterButton" layoutX="80" layoutY="790" onAction="#onFavoriteFilterButtonClick">
            <graphic>
                <ImageView fitHeight="15.0" fitWidth="15.0">
                    <image>
                        <Image url="https://cdn-icons-png.flaticon.com/512/1828/1828970.png" />
                    </image>
                </ImageView>
            </graphic>
        </ToggleButton>
        <Button text="Search" layoutX="80" layoutY="790" onAction="#onSearchButtonClick"></Button>
    </ToolBar>


    <ListView  fx:id="tourListView" onMouseClicked="#handleMouseClick" AnchorPane.topAnchor="40.0" AnchorPane.bottomAnchor="41.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

    </ListView>

    <ToolBar AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" prefHeight="40.0" prefWidth="318.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
        <Button text="Add" layoutX="5" layoutY="790" onAction="#onAddTourButtonClick"></Button>
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="refreshButton" text="Refresh" layoutX="80" layoutY="790" onAction="#onRefreshButtonClick"></Button>
    </ToolBar>
</AnchorPane>
