<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.tourplanner.controllers.DetailsController"
            prefHeight="400.0" prefWidth="600.0">

    <SplitPane dividerPositions="0.7" orientation="VERTICAL" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" >
        <items>
            <!--_____________________________________________________________________________________________________________-->
            <AnchorPane>
                <children>
                    <VBox>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>

                        <stylesheets>
                            <URL value="@../styles/DetailsViewStyles.css"/>
                        </stylesheets>

                        <Label fx:id="header" text=" Choose a Tour to set the details"></Label>


                        <Pane minHeight="20"/>

                        <Label styleClass="InfoLabel" text="Name:"/>

                        <Label  styleClass="Label" maxWidth="100" wrapText="true" fx:id="tourName" text="TestTouraaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" ></Label>

                        <Pane minHeight="20"/>

                        <Label styleClass="InfoLabel" text="Tour description"/>
                        <Label styleClass="Label" fx:id="tourDescription" text="TestDescription" ></Label>

                        <Pane minHeight="20"/>

                        <Label styleClass="InfoLabel" text="from"/>
                        <Label styleClass="Label" maxWidth="100" wrapText="true" fx:id="tourFrom" text="TestFrom" ></Label>

                        <Pane minHeight="20"/>

                        <Label styleClass="InfoLabel" text="to"/>
                        <Label styleClass="Label" maxWidth="100" wrapText="true" fx:id="tourTo" text="TestTo" ></Label>

                        <Pane minHeight="20"/>

                        <Label styleClass="InfoLabel" text="Transport type"/>
                        <Label styleClass="Label" maxWidth="100" wrapText="true" fx:id="tourTransportType" text="TestTransportType" ></Label>

                        <Pane minHeight="20"/>

                        <Label styleClass="InfoLabel" text="Tour Distance"/>
                        <Label styleClass="Label" maxWidth="100" wrapText="true" fx:id="tourDistance" text="TestDistance" ></Label>

                        <Button text="create Report" layoutX="80" onAction="#onReportButtonClick"></Button>

                    </VBox>
                </children>
            </AnchorPane>
            <!--_____________________________________________________________________________________________________________-->
            <AnchorPane>
                <children>

                </children>
            </AnchorPane>
            <!--_____________________________________________________________________________________________________________-->
        </items>
    </SplitPane>



</AnchorPane>
